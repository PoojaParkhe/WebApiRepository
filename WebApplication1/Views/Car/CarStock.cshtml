    {  
            var id = 0;  
            $.ajax({  
                url: 'http://localhost:50421/api/CarDetails/' + id,  
                type: 'DELETE',  
                success: function (data) {  
  
                },  
                error: function (data) {  
                    alert('Problem in deleting car:' + data.responseText);  
                }  
